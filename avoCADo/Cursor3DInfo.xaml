<UserControl x:Class="avoCADo.Cursor3DInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:avoCADo"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="200">
    <GroupBox Header="Cursor Info">
        <StackPanel>
            <TextBlock x:Name="tbWorldPos" Text="{Binding Position, StringFormat='World Position: {0}'}"/>
            <TextBlock x:Name="tbScreenPos" Text="{Binding ScreenPositionPixels, StringFormat='Screen Position: {0}'}"/>
        </StackPanel>
    </GroupBox>
</UserControl>
