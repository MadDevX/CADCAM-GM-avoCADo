<UserControl x:Class="avoCADo.BezierPatchGeneratorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:avoCADo"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <GroupBox Header="Bezier Patch Generator">
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Isoline Divisions" Margin="5"/>
                <TextBlock Text="{Binding ElementName=isolineDivisions, Path=Value, StringFormat='{}{0:#,(#0)}'}" Margin="5"/>
            </StackPanel>
            <Slider x:Name="isolineDivisions" Minimum="2" Maximum="64" IsSnapToTickEnabled="true" Value="{Binding IsolineDivisions}"/>
        </StackPanel>
    </GroupBox>
</UserControl>
